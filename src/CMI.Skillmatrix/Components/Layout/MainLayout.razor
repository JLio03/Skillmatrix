            <MudDrawerHeader>
                <MudText Typo="Typo.h6">Skillsmatrix</MudText>
            </MudDrawerHeader>
            <NavMenu />
        </MudDrawer>
        <MudMainContent Class="pt-16 px-16 flex-grow-1">
            <MudContainer Class="mt-6" MaxWidth="MaxWidth.ExtraExtraLarge">
                @Body
            </MudContainer>
        </MudMainContent>
    </MudDrawerContainer>
</MudLayout>

